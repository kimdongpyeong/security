<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.ClassRoomLiveTimeMapper">

    <sql id="selectFrom">
        SELECT
            `classroom_live_time`.`id`,
            `classroom_live_time`.`classroom_id`,
            `classroom_live_time`.`title`,
            `classroom_live_time`.`start_time`,
            `classroom_live_time`.`end_time`,
            `classroom_live_time`.`zoom_link`,
            `classroom_live_time`.`created_date`,
            `classroom_live_time`.`last_modified_date`
        FROM
            `tb_classroom_live_time` `classroom_live_time`
    </sql>

    <sql id="where">
        <where>
            <if test="classRoomLiveTimeDto.classroomId != null and classRoomLiveTimeDto.classroomId != ''">
                AND `classroom_live_time`.`classroom_id` = #{classRoomLiveTimeDto.classroomId}
            </if>
        </where>
    </sql>

    <resultMap id="classRoomLiveTimeResultMap" type="kr.supporti.api.common.entity.ClassRoomLiveTimeEntity">
        <result property="id" column="id"/>
        <result property="classroomId" column="classroom_id"/>
        <result property="title" column="title"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="zoomLink" column="zoom_link"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectClassRoomLiveTimeList"
        parameterType="java.util.Map"
        resultMap="classRoomLiveTimeResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectClassRoomLiveTimeListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectClassRoomLiveTime"
        parameterType="java.util.Map"
        resultMap="classRoomLiveTimeResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `classroom_live_time`.`id` = #{id}
    </select>

    <select
        id="selectClassRoomIdLiveTime"
        parameterType="java.util.Map"
        resultMap="classRoomLiveTimeResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `classroom_live_time`.`classroom_id` = #{id}
    </select>
    
    <update
        id="modifyClassRoomLiveTime"
        parameterType ="java.util.Map"
    >
        UPDATE
            `tb_classroom_live_time` `classroom_live_time`
        SET
                `classroom_live_time`.`title` = #{classRoomLiveTimeEntity.title},
                `classroom_live_time`.`start_time` = #{classRoomLiveTimeEntity.startTime},
                `classroom_live_time`.`end_time` = #{classRoomLiveTimeEntity.endTime}
        WHERE
            `classroom_live_time`.`id` = #{classRoomLiveTimeEntity.id}
    </update>

</mapper>