<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.ParentsMapper">

    <sql id="selectFrom">
        SELECT
            `lecturer_parents`.`id`,
            `lecturer_parents`.`name`,
            `lecturer_parents`.`phone_num`,
            `lecturer_parents`.`student_name`,
            `lecturer_parents`.`lecture_type`,
            `lecturer_parents`.`lecture_name`,
            `lecturer_parents`.`created_by`,
            `lecturer_parents`.`created_date`,
            `lecturer_parents`.`last_modified_date`
        FROM
            `tb_lecturer_parents` `lecturer_parents`
            
    </sql>

    <sql id="where">
        <where>
            <if test="parentsDto.name != null and parentsDto.name != ''">
                AND `lecturer_parents`.`name` LIKE CONCAT('%', #{parentsDto.name}, '%')
            </if>
            <if test="parentsDto.studentName != null and parentsDto.studentName != ''">
                AND `lecturer_parents`.`student_name` LIKE CONCAT('%', #{parentsDto.studentName}, '%')
            </if>
            <if test="parentsDto.id != null and parentsDto.id != ''">
                AND `lecturer_parents`.`id` = #{studentDto.id}
            </if>
            <if test="parentsDto.createdBy != null and parentsDto.createdBy != ''">
                AND `lecturer_parents`.`created_by` = #{parentsDto.createdBy}
            </if>
        </where>
    </sql>
    
    <resultMap id="parentsResultMap" type="kr.supporti.api.common.entity.ParentsEntity">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phoneNum" column="phone_num"/>
        <result property="studentName" column="student_name"/>
        <result property="lectureType" column="lecture_type"/>
        <result property="lectureName" column="lecture_name"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectParentsList"
        parameterType="java.util.Map"
        resultMap="parentsResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectParentsListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>
    
        <select
        id="selectParents"
        parameterType="java.util.Map"
        resultMap="parentsResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `lecturer_parents`.`id` = #{id}
    </select>

</mapper>