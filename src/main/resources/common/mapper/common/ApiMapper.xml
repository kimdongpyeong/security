<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.ApiMapper">

    <sql id="selectFrom">
        SELECT
            `api`.`id`,
            `api`.`url`,
            `api`.`method`,
            `api`.`name`,
            `api`.`description`,
            `api`.`created_date`,
            `api`.`last_modified_date`
        FROM
            `tb_api` `api`
    </sql>

    <sql id="where">
        <where>
            <if test="apiParamDto.userId">
                AND `api`.`id` IN (
                    SELECT
                        `api_id`
                    FROM
                        `tb_role_api`
                    WHERE
                        `role_id` IN (
                            SELECT
                                `role_id`
                            FROM
                                `tb_role_user`
                            WHERE
                                `user_id` = #{apiParamDto.userId}
                        )
                )
            </if>
        </where>
    </sql>

    <resultMap id="apiResultMap" type="kr.supporti.api.common.entity.ApiEntity">
        <result property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="method" column="method"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectApiList"
        parameterType="java.util.Map"
        resultMap="apiResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectApiListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectApi"
        parameterType="java.util.Map"
        resultMap="apiResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `api`.`id` = #{id}
    </select>

</mapper>