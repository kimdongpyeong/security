<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.MypageMapper">

    <sql id="selectFrom">
        SELECT
            `user`.`id`,
            `role_user`.`role_id`,
            `user`.`username`,
            `user`.`password`,
            `user`.`name`,
            `user`.`status`,
            `user`.`sign_up_way`,
            `user`.`id`,
            `user`.`profile_id`,
            `user`.`phone_num`,
            `profile`.`save_file_nm`
        FROM
            `tb_user` `user`
        LEFT JOIN
            `tb_user_profile` `profile`
        ON
            `user`.`profile_id` = `profile`.`id`
        JOIN
            `tb_role_user` `role_user`
        ON
            `role_user`.`user_id` = `user`.`id`
    </sql>

    <resultMap id="MypageResultMap" type="kr.supporti.api.common.entity.UserEntity">
        <result property="id" column="id"/>
        <result property="roleId" column="role_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="signUpWay" column="sign_up_way"/>
        <result property="profileId" column="profile_id"/>
        <result property="saveFileNm" column="save_file_nm"/>
        <result property="phoneNum" column="phone_num"/>
    </resultMap>

    <select
        id="selectMypageUser"
        parameterType="java.util.Map"
        resultMap="MypageResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `user`.`id` = #{id}
    </select>

    <update
        id="modifyUserInfo"
        parameterType="java.util.Map"
        >
        UPDATE
            `tb_user`
        SET
            `name` = #{accountDto.name},
            `gender` = #{accountDto.gender},
            `birth_date` = DATE_FORMAT(#{accountDto.birthDate}, '%Y%m%d'),
            `residence_cd` = #{accountDto.residenceCd}
        WHERE
            `id` = #{accountDto.id}
    </update>

    <update
        id="modifyUserIntroduce"
        parameterType="java.util.Map"
        >
        UPDATE
            `tb_user`
        SET
            `introduce_content` = #{accountDto.introduceContent}
        WHERE
            `id` = #{accountDto.id}
    </update>

    <update
        id="modifyProfile"
        parameterType="java.util.Map"
        >
        UPDATE
            `tb_user`
        SET
            `profile_id` = #{accountDto.profileId}
        WHERE
            `id` = #{accountDto.id}
    </update>

    <update
        id="removeUser"
        parameterType="java.util.Map"
        >
        UPDATE
            `tb_user`
        SET
            `status` = #{accountDto.status},
            `username` = CONCAT(`username`, CONCAT('_leave', `id`))
        WHERE
            `id` = #{accountDto.id}
    </update>

</mapper>
