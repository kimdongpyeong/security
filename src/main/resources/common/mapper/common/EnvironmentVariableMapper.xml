<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.EnvironmentVariableMapper">

    <sql id="selectFrom">
        SELECT
            `environment`.`id`,
            `environment`.`key`,
            `environment`.`desc`,
            `environment`.`value`,
            `environment`.`created_date`,
            `environment`.`last_modified_date`
        FROM
            `tb_environment_variable` `environment`
    </sql>

    <sql id="where">
        <where>
            <if test="environmentVariableParamDto.key != null and environmentVariableParamDto.key != ''">
                AND `environment`.`key` = #{environmentVariableParamDto.key}
            </if>
            <if test="environmentVariableParamDto.id != null and environmentVariableParamDto.id != ''">
                AND `environment`.`id` = #{environmentVariableParamDto.id}
            </if>
        </where>
    </sql>

    <resultMap id="environmentVariableResultMap" type="kr.supporti.api.common.entity.EnvironmentVariableEntity">
        <result property="id" column="id"/>
        <result property="key" column="key"/>
        <result property="desc" column="desc"/>
        <result property="value" column="value"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectEnvironmentVariableList"
        parameterType="java.util.Map"
        resultMap="environmentVariableResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectEnvironmentVariableListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectEnvironmentVariable"
        parameterType="java.util.Map"
        resultMap="environmentVariableResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `environment`.`id` = #{id}
    </select>

    <select
        id="selectEnvironmentVariableKey"
        parameterType="java.util.Map"
        resultMap="environmentVariableResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `environment`.`key` = #{key}
    </select>



</mapper>