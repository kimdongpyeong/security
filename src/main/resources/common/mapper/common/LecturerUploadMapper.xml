<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.LecturerUploadMapper">

    <sql id="selectFrom">
        SELECT
            `lecturer_student_file`.`id`,
            `lecturer_student_file`.`lecturer_student_id`,
            `lecturer_student_file`.`title`,
            `lecturer_student_file`.`desc`,
            `lecturer_student_file`.`delete_yn`,
            `lecturer_student_file`.`created_date`,
            `lecturer_student_file`.`last_modified_date`
        FROM
            `tb_lecturer_student_file` `lecturer_student_file`
    </sql>

    <sql id="where">
        <where>
            <if test="lecturerUploadDto.lecturerStudentId != null and lecturerUploadDto.lecturerStudentId != ''">
                AND `lecturer_student_file`.`lecturer_student_id` = #{lecturerUploadDto.lecturerStudentId}
            </if>
            <if test="lecturerUploadDto.deleteYn != null and lecturerUploadDto.deleteYn != ''">
                AND `lecturer_student_file`.`delete_yn` = #{lecturerUploadDto.deleteYn}
            </if>
        </where>
    </sql>

    <resultMap id="lecturerUploadResultMap" type="kr.supporti.api.common.entity.LecturerUploadEntity">
        <result property="id" column="id"/>
        <result property="lecturerStudentId" column="lecturer_student_id"/>
        <result property="title" column="title"/>
        <result property="desc" column="desc"/>
        <result property="deleteYn" column="delete_yn"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectLecturerUploadList"
        parameterType="java.util.Map"
        resultMap="lecturerUploadResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectLecturerUploadListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectLecturerUpload"
        parameterType="java.util.Map"
        resultMap="lecturerUploadResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `lecturer_student_file`.`lecturer_student_id` = #{id}
    </select>
    
    <update
        id="modifyStudentUploadYn"
        parameterType="java.util.Map">
        UPDATE `tb_lecturer_student_file` `lecturer_student_file`
        <set>
            <if test="lecturerUploadParamDto.deleteYn != null and lecturerUploadParamDto.deleteYn != ''">
                `lecturer_student_file`.`delete_yn` = #{lecturerUploadParamDto.deleteYn},
            </if>
        </set>
        WHERE
            `lecturer_student_file`.`id` = #{id}
    </update>

    <update
        id="modifyLecturerUpload"
        parameterType ="java.util.Map"
    >
        UPDATE 
            `tb_lecturer_student_file` `lecturer_student_file`
        SET
	            `lecturer_student_file`.`title` = #{lecturerUploadEntity.title},
                `lecturer_student_file`.`desc` = #{lecturerUploadEntity.desc},
                `lecturer_student_file`.`delete_yn` = #{lecturerUploadEntity.deleteYn}
        WHERE
            `lecturer_student_file`.`id` = #{lecturerUploadEntity.id}
    </update>

</mapper>