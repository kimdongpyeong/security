<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.UserPaymentInfoMapper">

    <sql id="selectFrom">
        SELECT
            `user`.`id`,
            `user`.`user_id`,
            `user`.`card_company`,
            `user`.`card_number`,
            `user`.`billing_key`,
            `user`.`created_date`,
            `user`.`last_modified_date`
        FROM
            `tb_user_payment_info` `user`
    </sql>

    <sql id="where">
        <where>
        </where>
    </sql>

    <resultMap id="userPaymentInfoResultMap" type="kr.supporti.api.common.entity.UserPaymentInfoEntity">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="cardCompany" column="card_company"/>
        <result property="cardNumber" column="card_number"/>
        <result property="billingKey" column="billing_key"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectUserPaymentInfoByUserId"
        parameterType="java.util.Map"
        resultMap="userPaymentInfoResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `user`.`user_id` = #{userId}
    </select>

</mapper>