<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.DemoMapper">

    <sql id="selectFrom">
        SELECT
            `demo`.`id`,
            `demo`.`title`,
            `demo`.`youtube_link`,
            `demo`.`exposure_yn`,
            `demo`.`created_date`,
            `demo`.`last_modified_date`
        FROM
            `tb_demo` `demo`
    </sql>

    <sql id="where">
        <where>
        	<if test="demoParamDto.exposureYn != null and demoParamDto.exposureYn != ''">
            	AND
            		`demo`.`exposure_yn` = #{demoParamDto.exposureYn}
            </if>
        </where>
    </sql>

    <resultMap id="demoResultMap" type="kr.supporti.api.common.entity.DemoEntity">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="youtubeLink" column="youtube_link"/>
        <result property="exposureYn" column="exposure_yn"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectDemoList"
        parameterType="java.util.Map"
        resultMap="demoResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectDemoListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectDemo"
        parameterType="java.util.Map"
        resultMap="demoResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `demo`.`id` = #{id}
    </select>
    
    <update
       id="updateDemoExpoureN"
    >
       UPDATE `tb_demo` SET `exposure_yn` = 'N'
    </update>

</mapper>