<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.NoticeMapper">

    <sql id="selectFrom">
    SELECT
        `board`.`id`,
        `board`.`title`,
        `board`.`desc`,
        `board`.`kinds_cd`,
        (SELECT `code`.`name` FROM `tb_code` `code` WHERE `code`.`value` = `board`.`kinds_cd`) `kinds_nm`,
        `board`.`important_yn`,
        `board`.`notice_yn`,
        `board`.`delete_yn`,
        `board`.`created_by`,
        `board`.`created_date`,
        `board`.`last_modified_date`
    FROM
        `tb_board` `board`
    </sql>

    <sql id="where">
        <where>
            <if test="noticeDto.id != null">
                AND `board`.`id` = #{noticeDto.id}
            </if>
            <if test="noticeDto.title != null">
                AND `board`.`title` LIKE CONCAT('%', #{noticeDto.title}, '%')
            </if>
            <if test="noticeDto.kindsCd != null and noticeDto.kindsCd != ''">
                AND `board`.`kinds_cd` = #{noticeDto.kindsCd}
            </if>
            
            <if test="noticeDto.deleteYn != null">
                AND `board`.`delete_yn` = 'N'
            </if>
        </where>
    </sql>

    <resultMap id="boardResultMap" type="kr.supporti.api.common.entity.NoticeEntity">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="desc" column="desc"/>
        <result property="kindsCd" column="kinds_cd"/>
        <result property="kindsNm" column="kinds_nm"/>
        <result property="importantYn" column="important_yn"/>
        <result property="noticeYn" column="notice_yn"/>
        <result property="deleteYn" column="delete_yn"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdDate" column="created_date"/>
        <result property="last_modified_date" column="lastModifiedDate"/>
    </resultMap>

    <select
        id="selectNoticeList"
        parameterType="java.util.Map"
        resultMap="boardResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectNoticeListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>
    
    <select
        id="selectNotice"
        parameterType="java.util.Map"
        resultMap="boardResultMap"
    >
        <include refid="selectFrom"/>
        <include refid="where"/>
    </select>

</mapper>