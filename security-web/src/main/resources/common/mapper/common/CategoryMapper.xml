<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.CategoryMapper">

    <sql id="selectFrom">
        SELECT
            `category`.`id`,
            `category`.`title`,
            `category`.`desc`,
            `category`.`publish_yn`,
            `category`.`created_date`,
            `category`.`last_modified_date`
        FROM
            `tb_category` `category`
    </sql>

    <sql id="where">
        <where>
            <if test="categoryParamDto.publishYn != null and categoryParamDto.publishYn != ''">
                AND `category`.`publish_yn` = #{categoryParamDto.publishYn}
            </if>
        </where>
    </sql>

    <resultMap id="categoryResultMap" type="kr.supporti.api.common.entity.CategoryEntity">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="desc" column="desc"/>
        <result property="publishYn" column="publish_yn"/>
        <result property="createdDate" column="created_date"/>
        <result property="lastModifiedDate" column="last_modified_date"/>
    </resultMap>

    <select
        id="selectCategoryList"
        parameterType="java.util.Map"
        resultMap="categoryResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectCategoryListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectCategory"
        parameterType="java.util.Map"
        resultMap="categoryResultMap"
    >
        <include refid="selectFrom"/>
        WHERE
            `category`.`id` = #{id}
    </select>


</mapper>