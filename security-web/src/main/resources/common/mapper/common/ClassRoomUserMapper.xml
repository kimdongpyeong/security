<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.supporti.api.common.mapper.ClassRoomUserMapper">

    <sql id="selectFrom">
        SELECT
           `classroom_user`.`classroom_id`,
           `classroom_user`.`user_id`,
           `classroom_user`.`created_date`,
           `user`.`name`,
           `classroom`.`title`,
           `classroom`.`save_file_nm`,
            (SELECT `profile`.`save_file_nm` FROM `tb_user_profile` `profile` WHERE `profile`.`id` = `user`.`profile_id`) AS `profile`,
            (SELECT `classroom`.`delete_yn` FROM `tb_classroom` `classroom` WHERE `classroom`.`id` = `classroom_user`.`classroom_id`) AS `deleteYn`
        FROM
           `tb_classroom_user` `classroom_user`
        JOIN
            `tb_user` `user`
        ON
            `classroom_user`.`user_id` = `user`.`id`
        JOIN
            `tb_classroom` `classroom`
        ON
            `classroom_user`.`classroom_id` = `classroom`.`id`
    </sql>

    <sql id="where">
        <where>
            <if test="classRoomUserParamDto.classroomId != null and classRoomUserParamDto.classroomId !=''">
                AND `classroom_user`.`classroom_id` = #{classRoomUserParamDto.classroomId}
            </if>
            <if test="classRoomUserParamDto.userId != null and classRoomUserParamDto.userId !=''">
                AND `classroom_user`.`user_id` = #{classRoomUserParamDto.userId}
            </if>
            <if test="classRoomUserParamDto.deleteYn != null">
                AND `classroom`.`delete_yn` = #{classRoomUserParamDto.deleteYn}
            </if>

        </where>
    </sql>

    <resultMap id="classRoomUserResultMap" type="kr.supporti.api.common.entity.ClassRoomUserEntity">
        <result property="classroomId" column="classroom_id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="profile" column="profile"/>
        <result property="createdDate" column="created_date"/>
        <result property="deleteYn" column="deleteYn"/>
    </resultMap>

    <select
        id="selectClassRoomUserList"
        parameterType="java.util.Map"
        resultMap="classRoomUserResultMap"
    >
        <include refid="PageFragment.sortStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.sortEnd"/>
        <include refid="PageFragment.limitOffset"/>
    </select>

    <select
        id="selectClassRoomUserListCount"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="PageFragment.countStart"/>
        <include refid="selectFrom"/>
        <include refid="where"/>
        <include refid="PageFragment.countEnd"/>
    </select>

    <select
        id="selectClassRoomUser"
        parameterType="java.util.Map"
        resultType="java.lang.Integer"
    >
        <include refid="selectFrom"/>
        WHERE
            `classroom_id`.`id` = #{classRoomUserParamDto.classroomId}
        AND
            `user_id`.`userId` = #{classRoomUserParamDto.userId}
    </select>

</mapper>